<odoo>
    <template id="report_summary_invoice_document">
        <t t-call="web.external_layout">
            <div class="mt-5">
                <div class="page">
                    <h2>
                        <span t-if="o.state == 'billed'">Billing</span>
                        <span t-if="o.state == 'draft'">Draft Billing</span>
                        <span t-if="o.state == 'cancel'">Cancelled Billing</span>
                        <span t-field="o.name" />
                    </h2>
                    <div
                        id="informations"
                        class="row mt32 mb32 d-flex justify-content-between"
                    >
                        <div class="col-6">
                            <h3>
                                <tr class="border-black o_total">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.total_amount" />
                                    </td>
                                </tr>
                            </h3>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Biling Date:</strong>
                            <p class="m-0" t-field="o.date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="o.date_due" />
                        </div>
                    </div>
                    <t
                        t-set="display_discount"
                        t-value="any(l.discount for l in o.billing_line_ids.move_id.invoice_line_ids)"
                    />
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th
                                    name="th_order_num"
                                    class="text-start"
                                >Order No. / Reference</th>
                                <th
                                    name="th_description"
                                    class="text-start"
                                >Description</th>
                                <th name="th_quantity" class="text-end">Quantity</th>
                                <th name="th_uom" class="text-start">UoM</th>
                                <th name="th_price" class="text-end">Price</th>
                                <th
                                    name="th_discount"
                                    t-if="display_discount"
                                    class="text-end"
                                >
                                    <span>Disc.%</span>
                                </th>
                                <th name="th_taxes" class="text-start">Taxes</th>
                                <th name="th_subtotal" class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.billing_line_ids" t-as="bill_line">
                                <t t-set="invoice" t-value="bill_line.move_id" />
                                <t t-foreach="invoice.invoice_line_ids" t-as="line">
                                    <t t-if="line == invoice.invoice_line_ids[0]">
                                        <tr>
                                            <td
                                                t-attf-colspan="{{8 if display_discount else 7}}"
                                            >
                                                <span t-field="invoice.invoice_date" />
                                                <span t-field="invoice.name" />
                                            </td>
                                        </tr>
                                    </t>
                                    <t
                                        t-set="order"
                                        t-value="line.sale_line_ids.order_id"
                                    />
                                    <t
                                        t-set="taxes"
                                        t-value="', '.join([(tax.description or tax.name) for tax in line.tax_ids])"
                                    />
                                    <tr>
                                        <td name="td_order_num" class="text-start">
                                            <span t-esc="order.name" />
                                            <t t-if="order.client_order_ref">
                                                <span> / </span>
                                                <span
                                                    t-field="order.client_order_ref"
                                                />
                                            </t>
                                        </td>
                                        <td name="td_description" class="text-start">
                                            <span t-field="line.name" />
                                        </td>
                                        <td name="td_quantity" class="text-end"><span
                                                t-field="line.quantity"
                                            /></td>
                                        <td name="td_uom" class="text-start"><span
                                                t-field="line.product_uom_id.name"
                                            /></td>
                                        <td name="td_price" class="text-end"><span
                                                class="text-nowrap"
                                                t-field="line.price_unit"
                                            /></td>
                                        <td
                                            name="td_discount"
                                            t-if="display_discount"
                                            class="text-end"
                                        >
                                            <span
                                                class="text-nowrap"
                                                t-field="line.discount"
                                            />
                                        </td>
                                        <td name="td_taxes" class="text-start">
                                            <span t-esc="taxes" />
                                        </td>
                                        <td name="td_subtotal" class="text-end">
                                            <span
                                                class="text-nowrap"
                                                t-field="line.price_subtotal"
                                            />
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td
                                        t-attf-colspan="{{8 if display_discount else 7}}"
                                    >
                                        <i class="fa fa-square" />
                                        <span t-field="invoice.partner_id.name" />
                                    </td>
                                </tr>
                                <tr>
                                    <td
                                        class="text-end"
                                        t-attf-colspan="{{7 if display_discount else 6}}"
                                    >Amount Untaxed</td>
                                    <td><span t-field="invoice.amount_untaxed" /></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div class="clearfix mb-4">
                        <div id="total" class="row">
                            <div
                                t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto"
                            >
                                <table
                                    class="table table-sm table-borderless"
                                    style="page-break-inside: avoid;"
                                >
                                    <t t-set="tax_totals" t-value="o.tax_totals" />
                                    <t t-call="account.document_tax_totals" />
                                </table>
                            </div>
                        </div>
                    </div>
                    <div>
                        <span t-field="o.narration" />
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="report_summary_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="l10n_jp_summary_invoice.report_summary_invoice_document" />
            </t>
        </t>
    </template>
</odoo>
